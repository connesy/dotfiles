{
  // Explorer and files
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",

  // Editor
  "editor.insertSpaces": true,  // This one forces the tab to be **space**
  "editor.tabSize": 2,  // Default tab size in spaces
  "editor.snippetSuggestions": "top",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.semanticTokenColorCustomizations": {
    "[Monokai]": {
      // Apply to this theme only
      "enabled": true,
      "rules": {
        "variable.readonly:python": "#ae81ff",
        "property:python": "#fd971f"
      },
    }
  },

  // Workbench
  "workbench.colorTheme": "Monokai",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },

  // Terminal (integrated)
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.env.linux": {},
  "terminal.integrated.fontSize": 14,

  // Git and GitLens
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  // Python
  "python.analysis.logLevel": "Warning",
  "python.analysis.completeFunctionParens": true,
  "python.analysis.extraPaths": ["./src", "./test"],
  "python.autoComplete.addBrackets": true,
  // Python - Linting
  "python.linting.enabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--config=/home/stefan/connectedcars/data-quality/setup.cfg"
  ],
  "python.linting.pylintEnabled": false,
  // Python - Formatting
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "120"],
  // Python - Testing
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "--rootdir=/home/stefan/connectedcars/data-quality/"
  ],
  "python.showStartPage": false,
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "[python]": {
    "editor.tabSize": 4,
    "editor.rulers": [
      120
    ],
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.python",
    "editor.semanticHighlighting.enabled": true,
  },

  // Jupyter
  "jupyter.alwaysTrustNotebooks": true,
  "jupyter.widgetScriptSources": [
    "jsdelivr.com",
    "unpkg.com"
  ],
  "jupyter.themeMatplotlibPlots": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.debugJustMyCode": true,

  // JavaScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": true,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "javascript.suggest.completeFunctionCalls": true,
  "[javascript]": {
    "editor.rulers": [
      120
    ],
    "editor.formatOnSave": true
  },

  // TypeScript
  "typescript.referencesCodeLens.enabled": true,
  "typescript.referencesCodeLens.showOnAllFunctions": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.implementationsCodeLens.enabled": true,
  "[typescript]": {
    "editor.rulers": [
      120
    ],
    "editor.formatOnSave": true
  },

  // Zen mode
  "zenMode.hideTabs": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,

  // Live Server
  "liveServer.settings.host": "127.0.0.1",
  "liveServer.settings.port": 5500,
  "liveServer.settings.CustomBrowser": "chrome:PrivateMode",

  "todohighlight.isEnable": true,
  "todohighlight.keywords": [],

  "debug.allowBreakpointsEverywhere": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "remoteHub.search.download.enabled": true,
  "redhat.telemetry.enabled": false,
  "bashIde.explainshellEndpoint": "http://localhost:5000",
}
